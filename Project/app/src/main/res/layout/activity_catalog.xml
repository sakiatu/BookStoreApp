<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Catalog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catagories :"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_math"
        android:layout_marginTop="20dp"
        android:onClick="MathSection"
        android:text="Math"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_EEE"
        android:layout_marginTop="10dp"
        android:text="EEE"
        android:onClick="EEEsection"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_Physics"
        android:layout_marginTop="10dp"
        android:text="Physics"
        android:onClick="PhysicsSection"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_DataStructure"
        android:text="Data Structure"
        android:onClick="DSsection"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_storyBooks"
        android:text="Story Books"
        android:onClick="StoryBooksection"
        />

</LinearLayout>