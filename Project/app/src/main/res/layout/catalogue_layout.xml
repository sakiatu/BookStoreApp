<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Catagories :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_math"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="mathSection"
        android:text="Math" />

    <Button
        android:id="@+id/btn_EEE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:onClick="eeeSection"
        android:text="EEE" />

    <Button
        android:id="@+id/btn_Physics"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:onClick="physicsSection"
        android:text="Physics" />

    <Button
        android:id="@+id/btn_DataStructure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:onClick="dsSection"
        android:text="Data Structure" />

    <Button
        android:id="@+id/btn_storyBooks"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:onClick="storyBookSection"
        android:text="Story Books" />

</LinearLayout>